<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Página inicial | Cattlebuy</title>
  <link rel="stylesheet" href="style.css" />
</head>

<body class="fundo">
  <!-- Cabeçalho Fixo -->
  <header class="container"
    style="width: 98%; max-width: 100%; border-radius: 0; border-top: 0; margin: 0; padding: 10px 20px; position: fixed; top: 0; z-index: 100; background-color: #001f3f;">
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <h1 style="margin: 0; color: #FFF; font-size: 1.5rem;">Cattlebuy</h1>
      <nav class="menu">
        <ul style="display: flex; gap: 20px; list-style: none; align-items: center;">
          <li>
            <a href="/perfil"><img src="/images/perfil.png" alt="Perfil" style="width: 25px; height: 25px; border-radius: 50%;" /></a>
          </li>
          <li><a href="/sobre" style="color: #FFF; text-decoration: none; font-weight: bold;">Sobre</a></li>
          <li><a href="/ajuda" style="color: #FFF; text-decoration: none; font-weight: bold;">Ajuda</a></li>
          <li><a href="/logout" style="color: #FF6B6B; text-decoration: none; font-weight: bold;">Sair</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Conteúdo Principal -->
  <main style="display: flex; margin-top: 45px; gap: 20px; margin-left: 5px; width: 90%; height: 80%; justify-content: center;">
    <div class="container" style="flex: 1;">
      <div style="text-align: right; margin-bottom: 20px;">
        <a href="/addlote" class="btn add">+ Adicionar Lote</a>
      </div>

      <!-- Lista de Lotes -->
      <div>
        <h2 style="color: #FFF; border-bottom: 1px solid #F0F0F0; padding-bottom: 10px;">Meus Lotes</h2>

        <% if (lotesProdutor && lotesProdutor.length > 0) { %>
          <% lotesProdutor.forEach(lote => { %>
            <div
              style="background-color: rgba(0, 51, 102, 0.7); padding: 15px; border-radius: 5px; margin-bottom: 10px; border: 1px solid #F0F0F0;">
              <h3 style="color: #FFF; margin-top: 0;">Lote #<%= lote._id %></h3>
              <p style="color: #FFF;"><strong>Quantidade:</strong> <%= lote.quantidade || 'N/A' %> cabeças</p>
              <p style="color: #FFF;"><strong>Raça:</strong> <%= lote.raca || 'N/A' %></p>
              <p style="color: #FFF;"><strong>Preço:</strong> R$ <%= lote.preco ? lote.preco.toFixed(2) : 'N/A' %> por cabeça</p>
              <p style="color: #FFF;"><strong>Sexo:</strong> <%= lote.sexo || 'N/A' %></p>
              <p style="color: #FFF;"><strong>Peso médio:</strong> <%= lote.peso || 'N/A' %> kg</p>
              <p style="color: #FFF;"><strong>Dentição:</strong> <%= lote.denticão || 'N/A' %></p>
              <div style="margin-top: 10px;">
                <a href="/editlote/<%= lote._id %>" class="btn edit" style="margin-right: 5px;">Editar</a>
                <a href="/dellote/<%= lote._id %>" class="btn delete" onclick="return confirm('Tem certeza que deseja excluir este lote?')">Remover</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p style="color: #FFF;">Você ainda não registrou nenhum lote.</p>
        <% } %>
      </div>
    </div>
  </main>
</body>

</html>
