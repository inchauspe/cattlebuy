<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registro | Cattlebuy</title>
  <link rel="stylesheet" href="/style.css" />
  <style>
    .form-registro {
      display: flex;
      flex-direction: column;
      gap: 15px;
      width: 100%;
      max-width: 700px;
    }

    .linha-dupla {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .linha-dupla > .form-group {
      flex: 1;
      min-width: 150px;
    }

    #camposProdutor {
      margin-top: 10px;
    }
  </style>
</head>

<body class="fundo">
  <div class="container-registro" style="max-width: 720px; width: 90%;">
    <h1>REGISTRO</h1>
    <form action="/registro" method="POST" enctype="multipart/form-data" class="form-registro">
      <div class="linha-dupla">
        <div class="form-group">
          <label for="nome">Nome:</label>
          <input type="text" name="nome" id="nome" required />
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" required />
        </div>
      </div>

      <div class="linha-dupla">
        <div class="form-group">
          <label for="senha">Senha:</label>
          <input type="password" name="senha" id="senha" required />
        </div>

        <div class="form-group">
          <label for="foto">Foto:</label>
          <input type="file" name="foto" id="foto" />
        </div>
      </div>

      <div class="form-group">
        <label for="tipo">Tipo de Usuário:</label>
        <select name="tipo" id="tipo" required onchange="exibirCamposProdutor(this.value)">
          <option value="" disabled selected>Selecione</option>
          <option value="Comprador">Comprador</option>
          <option value="Produtor">Produtor</option>
        </select>
      </div>

      <div id="camposProdutor" style="display: none;">
        <div class="linha-dupla">
          <div class="form-group">
            <label for="cidade">Cidade:</label>
            <input type="text" name="cidade" id="cidade" />
          </div>
          <div class="form-group">
            <label for="estado">Estado:</label>
            <input type="text" name="estado" id="estado" />
          </div>
        </div>
        <div class="form-group">
          <label for="numero">Número para Contato:</label>
          <input type="text" name="numero" id="numero" />
        </div>
      </div>

      <button type="submit" class="btn">Registrar</button>
      <a href="/login" class="btn">Já tenho conta</a>
      <a href="/" class="btn cancelar">Voltar</a>
    </form>
  </div>

  <script>
    function exibirCamposProdutor(tipo) {
      const divCampos = document.getElementById('camposProdutor');
      divCampos.style.display = tipo === 'Produtor' ? 'block' : 'none';
    }
  </script>
</body>
</html>
