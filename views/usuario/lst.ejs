<%- include('../cabecalho.ejs') %>

  <h1>LISTAGEM DE USUÁRIOS</h1>

  <div class="search">
    <form action="/filtroUsuario" method="post">
      <input type="text" name="filtro" placeholder="Digite a busca...">
      <button type="submit"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Pesquisar</button>
    </form>
  </div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Tipo</th>
        <th>Foto</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(usuario=> { %>
        <tr>
          <td>
            <%= usuario._id %>
          </td>
          <td>
            <%= usuario.nome %>
          </td>
          <td>
            <%= usuario.email %>
          </td>
          <td>
            <%= usuario.tipo %>
          </td>
          <td>
            <% if (usuario.foto) { %>
              <img src="/uploads/<%= usuario.foto %>" alt="Foto" style="width: 50px; height: 50px; border-radius: 50%;">
              <% } else { %>
                <span>Sem foto</span>
                <% } %>
          </td>
          <td>
            <a href="/edtusuario/<%= usuario._id %>" class="btn edit"><i class="fas fa-edit"></i>&nbsp;Editar</a>
            <a href="/delusuario/<%= usuario._id %>" class="btn delete"
              onclick="return confirm('Tem certeza que deseja excluir?')">
              <i class="fas fa-trash"></i>&nbsp;Excluir
            </a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>

  <div class="footer">
    <a href="/addusuario" class="btn add"><i class="fas fa-add"></i>&nbsp;Adicionar</a>
  </div>

  <%- include('../rodape.ejs') %>